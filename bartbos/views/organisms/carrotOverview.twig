<section data-inviewport="no" class="section carrotOverview {{fields.background ? fields.background}} textImage d-flex align-items-center justify-content-center">

	<div class="container">

		<div class="row">

			<div class="col-12 {{ fields.image ? 'col-md-6' }} d-flex flex-column align-items-center justify-content-center" style="perspective:1000px;">

				{% if fields.title %}
					<h2 class="textImage__title text-center">{{fields.title}}</h2>
				{% endif %}
				{% if fields.content %}
					<div class="textImage__content text-center">
						{{fields.content}}
					</div>

				{% endif %}

			</div>

		</div>

		{% if fields.carrots %}

			<div class="row mt-4">

					{% for carrot in posts %}

						{% include 'molecules/carrotOverviewCard.twig' %}

					{% endfor %}

			</div>

		{% endif %}

		{% if fields.button_left or fields.button_right %}

			<div class="d-flex mt-3 gap-3 fade-in delay-5">

				{% if fields.button_left.url and fields.button_left.title %}

					{% include 'atoms/button.twig' with {
						'url': fields.button_left.url,
						'title': fields.button_left.title,
						'target': fields.button_left.target,
						'style': fields.style_button_left
					}
				%}

				{% endif %}

				{% if fields.button_right.url and fields.button_right.title %}

					{% include 'atoms/button.twig' with {
							'url': fields.button_right.url,
							'title': fields.button_right.title,
							'target': fields.button_right.target,
							'style': fields.style_button_right
						}
					%}

				{% endif %}

			</div>

		{% endif %}

		<div class="row">

			<div class="text-center mt-5">

				{% include 'atoms/button.twig' with {
		'url': '#',
		'title': 'CPT overview coming soon',
		'style': 'button--alternative',
		'classes': 'd-inline-flex'
		}
	%}

			</div>

		</div>

	</div>

</section>
