{% set mid = loop.index == 2 %}
{% set image = cpt.thumbnail ? cpt.thumbnail %}
{% set content = cpt.content ? cpt.content %}

<div class="col-12 {{filters == true ? 'col-md-4' : 'col-md-4'}} {{mid ? 'my-4 my-md-0'}} {{loop.index > 3 ? 'mt-4'}} {{card_type == 'icon-image' ? 'mt-10' }}">

	<div class="carrotOverviewCard {{cardBG ? 'carrotOverviewCard' ~ cardBG}} w-100 h-100 d-flex align-items-center flex-column gap-2 position-relative pt-0 {{card_type == 'icon-image' ? 'pt-5'}}">

		{% if image %}

			{% if card_type == 'icon-image' %}

				<div class="carrotOverviewCard__imageWrapper p-2 mt-3 d-flex align-items-center justify-content-center">

					<img src="{{image}}" class="carrotOverviewCard__image carrotOverviewCard__image--iconRounded {{imageBackground ? 'carrotOverviewCard__image' ~ imageBackground}} cover"/>

				</div>

			{% endif %}

			{% if card_type == 'small-image' %}

				<div class="carrotOverviewCard__image carrotOverviewCard__image--small {{imageBackground ? 'carrotOverviewCard__image' ~ imageBackground}} p-2 mt-3 d-flex align-items-center justify-content-center">

					<img src="{{image}}" class="w-100" width="160"/>

				</div>

			{% endif %}

			{% if card_type == 'large-image' %}

				<div class="carrotOverviewCard__image carrotOverviewCard__image--large overflow-hidden mb-3 d-flex align-items-center justify-content-center">

					<img src="{{cpt.thumbnail}}" class="cover w-100" width="600" height="600"/>

				</div>

			{% endif %}

		{% endif %}

		<div class="d-flex flex-column column-gap-3">

			{% if cpt.post_title or cpt.title %}

				<h3 class="text-center m-0 {{card_type == 'icon-image' ? 'mt-5'}}">{{cpt.post_title ? cpt.post_title : cpt.title}}</h3>

			{% endif %}



			{% if options %}

				<div class="carrotOverviewCard__taxonomyWrapper d-flex w-100 column-gap-3 row-gap-2 align-items-center justify-content-center my-3">

					{% for taxonomy in cpt.terms %}

						<div class="carrotOverviewCard__taxonomy d-flex flex-column p-2">

							<strong>{{taxonomy.name|replace({'_': ' '})|capitalize}}</strong>

							<span>{{taxonomy.terms}}</span>

						</div>

					{% endfor %}

				</div>

			{% endif %}

			{% for specification in cpt.specifications %}

				{% include 'molecules/carrotSpecifications.twig' with {
				'specification': specification
			} %}

			{% endfor %}

			{% if content %}

				<div class="carrotOverviewCard__content px-3 mb-3">

					{{content|striptags('<p><br>')|truncate(28)}}

				</div>

			{% endif %}

			<div class="mb-3 d-flex align-items-center justify-content-center">

				{% include 'atoms/button.twig' with {
		'url': cpt.permalink,
		'title': cpt.button_text ? cpt.button_text : 'Read more',
		'classes': buttonType ? buttonType : 'button--primary'
		}
	%}

			</div>

		</div>

	</div>

</div>

