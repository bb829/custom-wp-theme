{% extends 'base.twig' %}

{% block content %}

{% set headerType = attribute(theme_options, cpt ~ '_single_header_type') %}

{% if headerType == 'default' %}

	{% include 'organisms/cpt-header.twig' %}

{% endif %}

{% if headerType == 'minimal' %}

	{% include 'organisms/cpt-header-minimal.twig' %}

{% endif %}


		{% for item in cpt_options.content %}

			{% include 'organisms/text-image.twig' with item %}

		{% endfor %}


	{% if cpt_options.featured_posts_content %}

		{% include 'organisms/cpt-top-list.twig' %}

	{% endif %}

{% endblock %}

