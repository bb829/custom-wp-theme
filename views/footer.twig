<footer class="section {{theme_options.footer_background_color ? theme_options.footer_background_color }} footer p-3 mt-5">
	<div class="container">
		<div class="row">
			<div class="col-12 col-lg-6 py-4">
				<h3>{{sitemap.name}}</h3>

				<div class="d-flex flex-column">

					{% for item in sitemap.items %}
						<a class="footer__sitemapLink" href="{{item.url}}">
							<span>{{item.title}}</span>
						</a>
					{% endfor %}

				</div>

			</div>

			<div class="col-12 footer__copyright d-flex">

				<div class="col-9 d-flex align-items-center justify-content-start">

					<span>Copyright &copy; 2023 - Showcase - All rights reserved</span>

				</div>

				<div class="col-3 d-flex align-items-center justify-content-end">
					<span>
						<a href="/privacy-policy/">Privacy Policy</a>
					</span>
				</div>
			</div>
		</div>
	</div>
</footer>

